%nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    = link_to 'QiitaClone', root_path, class: 'navbar-brand'
    %button.navbar-toggler{ data: { bs_target: '#navbarNavDropdown', bs_toggle: 'collapse' }, type: 'button' }
      %span.navbar-toggler-icon
    #navbarNavDropdown.collapse.navbar-collapse
      %ul.navbar-nav
        %li.nav-item
          = link_to 'タグ一覧', tags_path, class: 'nav-link'
        %li.nav-item
          %a.nav-link{ href: '#' } Features
        %li.nav-item
          %a.nav-link{ href: '#' } Pricing
        %li.nav-item.dropdown
          - if user_signed_in?
            %a.nav-link.dropdown-toggle{ 'data-bs-toggle': 'dropdown', href: '#', role: 'button' }
              = image_tag avatar_path(current_user.avatar), class: 'header__users-avatar rounded-circle'
              = current_user.name
            %ul.dropdown-menu
              %li
                = link_to '自分の記事一覧', user_articles_path, class: 'dropdown-item'
              %li
                = link_to 'マイページ', edit_user_registration_path, class: 'dropdown-item'
              %hr
              %li
                = link_to 'ログアウト', destroy_user_session_path, class: 'dropdown-item', data: { turbo_method: :delete }
          - else
            %a.nav-link.dropdown-toggle{ 'data-bs-toggle': 'dropdown', href: '#', role: 'button' } ログイン
            %ul.dropdown-menu
              %li
                = link_to '新規登録', new_user_registration_path, class: 'dropdown-item'
              %li
                = link_to 'ログイン', new_user_session_path, class: 'dropdown-item'
